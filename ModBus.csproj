<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1</TargetFrameworks>
		<RootNamespace>System.IO.Ports</RootNamespace>
		<Version>2025.09.08</Version>
		<Description>ModBus</Description>
	</PropertyGroup>
	<Choose>
		<When Condition=" '$(Configuration)'=='Release' ">
			<PropertyGroup>
				<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
				<PackageOutputPath>..\nupkg</PackageOutputPath>
			</PropertyGroup>
		</When>
	</Choose>


	<ItemGroup>
		<PackageReference Include="System.IO.Ports" Version="9.0.8" />
	</ItemGroup>

	<Choose>
		<When Condition=" '$(Configuration)'=='Debug' AND '$(SolutionName)'=='libs' ">
			<ItemGroup>
				<ProjectReference Include="..\Tools\Tools.csproj" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Tools" Version="2025.5.3" />
			</ItemGroup>
		</Otherwise>
	</Choose>
	
</Project>
